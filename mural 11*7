<script>
    // Variables globales
    const sections = document.querySelectorAll('.content-section');
    const navButtons = document.querySelectorAll('.nav-button');
    const modalOverlay = document.getElementById('modal-overlay');
    const closeModalButton = document.getElementById('close-modal');
    const consejoCards = document.querySelectorAll('#consejo .info-card');

    /**
     * Funci√≥n para mostrar una secci√≥n espec√≠fica
     * @param {string} targetId - ID de la secci√≥n a mostrar
     */
    function showSection(targetId) {
        // Ocultar todas las secciones
        sections.forEach(section => {
            section.classList.remove('active');
        });
        // Desactivar todos los botones
        navButtons.forEach(button => {
            button.classList.remove('active-tab');
        });

        // Mostrar la secci√≥n objetivo con transici√≥n
        const targetSection = document.getElementById(targetId);
        if (targetSection) {
            targetSection.classList.add('active');
            
            // Activar el bot√≥n correspondiente
            const activeButton = document.querySelector(`.nav-button[data-target="${targetId}"]`);
            if (activeButton) {
                activeButton.classList.add('active-tab');
            }
        }
    }

    /**
     * Inicializaci√≥n: Configuraci√≥n de Listeners y activaci√≥n inicial
     */
    window.onload = function() {
        // Configuraci√≥n de Listeners para la navegaci√≥n
        navButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                const targetId = this.getAttribute('data-target');
                showSection(targetId);
                // Efecto Ripple al hacer clic
                createRipple(e, this);
            });
        });

        // Configuraci√≥n de Listeners para el Modal del Consejo del Aula
        consejoCards.forEach(card => {
            card.addEventListener('click', function() {
                document.getElementById('modal-role').textContent = this.getAttribute('data-role');
                document.getElementById('modal-detail').textContent = this.getAttribute('data-detail');
                document.getElementById('modal-image').src = this.getAttribute('data-img');
                
                modalOverlay.classList.remove('hidden');
                setTimeout(() => modalOverlay.classList.add('active'), 10); // Trigger transition
            });
        });

        // Cierre del Modal
        closeModalButton.addEventListener('click', closeModal);
        modalOverlay.addEventListener('click', function(e) {
            if (e.target === modalOverlay) {
                closeModal();
            }
        });

        // Cierre del Modal con la tecla ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && modalOverlay.classList.contains('active')) {
                closeModal();
            }
        });
    };

    /**
     * Oculta el modal con transici√≥n.
     */
    function closeModal() {
        modalOverlay.classList.remove('active');
        setTimeout(() => modalOverlay.classList.add('hidden'), 400);
    }


    /**
     * Efecto visual de onda (Ripple Effect)
     */
    function createRipple(event, button) {
        const circle = document.createElement('span');
        const diameter = Math.max(button.clientWidth, button.clientHeight);
        const radius = diameter / 2;

        // Posiciona el c√≠rculo en el punto donde se hizo clic
        circle.style.width = circle.style.height = `${diameter}px`;
        circle.style.left = `${event.clientX - button.offsetLeft - radius}px`;
        circle.style.top = `${event.clientY - button.offsetTop - radius}px`;
        circle.classList.add('ripple');

        // Elimina cualquier ripple anterior y a√±ade el nuevo
        const ripple = button.getElementsByClassName('ripple')[0];
        if (ripple) {
            ripple.remove();
        }
        button.appendChild(circle);
    }
</script>
</body>
